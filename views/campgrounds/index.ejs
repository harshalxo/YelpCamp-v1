<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>Choose from some of our hand-picked campgrounds!</p>
			<a class="btn btn-primary btn-lg" href = "/campgrounds/new">Add a new Camp</a>
		</div>
	</header>
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campground.forEach(function(camp) { %>
		<div class="col-md-4 col-sm-6">
			<div class="thumbnail">
				<img src="<%= camp.image %>">
				<div class="caption">
					<h4><%= camp.name %></h4>
				</div>
				<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary btn-lg btn-block">More Info</a>
			</div>
		</div>
		<% }) %>
	</div>

</div>

<%- include("../partials/footer") %>